{
  "manifest_version": 3,
  "name": "Tech Stack Analyzer",
  "version": "1.0",
  "description": "Analyze websites to detect frontend and backend technologies.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
